<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bn.Main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.bn.Main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bn.Main.MenuActivity"
            android:label="@string/menuactivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.bn.Main.LoadActivity"
            android:label="@string/loadactivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.bn.Main.SaveActivity"
            android:label="@string/saveactivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.bn.Main.HelpActivity"
            android:label="@string/helpactivity"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" >
        </activity>
        <activity
            android:name="com.bn.Main.PrintActivity"
            android:label="@string/printactivity"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name="com.bn.Main.DrawActivity"
            android:label="@string/printactivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>